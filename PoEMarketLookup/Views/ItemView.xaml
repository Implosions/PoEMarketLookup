<UserControl x:Class="PoEMarketLookup.Views.ItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PoEMarketLookup.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="TitleBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <Style TargetType="Rectangle" x:Key="Spacer">
            <Setter Property="Height" Value="3"/>
            <Setter Property="Fill" Value="LightGray"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Style="{StaticResource TitleBlock}">Item Name</TextBlock>
            <TextBlock Style="{StaticResource TitleBlock}">Item Base</TextBlock>
            <Rectangle Style="{StaticResource Spacer}"/>
            <ListBox>
                <ListBoxItem>Stat: 1</ListBoxItem>
                <ListBoxItem>Stat: 1</ListBoxItem>
                <ListBoxItem>Stat: 1</ListBoxItem>
            </ListBox>
            <Rectangle Style="{StaticResource Spacer}"/>
            <TextBlock HorizontalAlignment="Center">Enchantment</TextBlock>
            <Rectangle Style="{StaticResource Spacer}"/>
            <ListBox>
                <ListBoxItem>Implicit 1</ListBoxItem>
                <ListBoxItem>Implicit 2</ListBoxItem>
            </ListBox>
            <Rectangle Style="{StaticResource Spacer}"/>
            <ListBox>
                <ListBoxItem>Explicit 1</ListBoxItem>
                <ListBoxItem>Explicit 2</ListBoxItem>
                <ListBoxItem>Explicit 3</ListBoxItem>
            </ListBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
